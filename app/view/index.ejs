<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Items</title>
  <style>
    body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background-color: #f4f6f8; margin: 0; padding: 20px; }
    h1 { color: #0078d4; text-align: center; }
    table { width: 80%; margin: 20px auto; border-collapse: collapse; background-color: #fff; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
    th, td { padding: 12px 20px; border: 1px solid #ddd; text-align: center; }
    th { background-color: #0078d4; color: white; }
    a.button, button { padding: 8px 16px; margin: 4px; text-decoration: none; background-color: #0078d4; color: white; border: none; border-radius: 4px; cursor: pointer; }
    a.button:hover, button:hover { background-color: #005a9e; }
    form { display: inline; }
    div.top { text-align: center; margin-bottom: 10px; }
  </style>
</head>
<body>
  <h1>Lista de Items</h1>
  <div class="top">
    <a href="/create" class="button">Crear Nuevo Item</a>
  </div>
  
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if (items.length === 0) { %>
        <tr><td colspan="3">No hay items disponibles</td></tr>
      <% } else { %>
        <% items.forEach(item => { %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td>
              <a href="/edit/<%= item.id %>" class="button">Editar</a>
              <form action="/delete/<%= item.id %>" method="POST">
                <button type="submit">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</body>
</html>
